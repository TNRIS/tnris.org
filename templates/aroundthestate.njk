{% extends "base.njk" %}


{% block contentsOne %}
  <div id="contentMain" class="container-md">
    <div class="row article">
      <div class="col-sm-12 col-lg-8 blog-main">
        <h1 class="headline">
          <small class="text-muted">Around the State</small><br>
          {{ title }}</h1>
        <div class="byline">
          <strong>by <author>{{ author }}<author></strong> {% if division %}<em>{{division}}</em>{% endif %} | <time>{{date|prettyDate}}</time>
        </div>

        {% if mainimage %}
        <figure>
          <img class="media-object px-2 img-fluid mx-auto d-block" src="{{mainimage}}" alt="{{imagealt}}">

        {% if mainimagecaption %}
          <figcaption class="text-right"><em>{{mainimagecaption}}</em><figcaption>
        {% endif %}

          </figure>
        {% endif %}
        {{contents|safe}}
      </div>

      {% block rightContent %}
        <div class="col-sm-12 col-lg-4 blog-sidebar">
          <h3>Featured in <em>Around the State</em></h3>
          <ul class="news-list list-clean">
          {% set count = 1 %}
           {% for ats_item in around_the_state %}
              {% if (ats_item.id != id) and count <= 5 %}
                  {% set count =  count + 1 %}
                  <li class="media">
                    <div class="media-left">
                      <a href="{{ats_item.preserved}}"><img src="{{ats_item.thumbnail}}" alt="Thumbnail image for {{ats_item.title}}"></a>
                    </div>
                    <div class="media-body">
                      <time>{{ats_item.date|prettyDate}}</time>
                      <h3 class="media-heading">
                      <a href="{{ats_item.preserved}}">{{ats_item.title}}</a></h3>
                      <p class="d-md-none d-lg-none">
                        {{ats_item.description}}
                      </p>
                    </div>
                  </li>
              {% endif %}
           {% endfor %}
         </ul>
        </div>
      {% endblock %}
    </div>
  </div>
{% endblock %}

{% block contentsTwo %}
  {% include "partials/highlights.njk" %}
{% endblock %}
