{% extends "base.njk" %}

{% block topcontent %}
  <div class="container-fluid full">

        <div class="top-container">
        {% if mainimage %}
          <img class="img-fluid mx-auto d-block" src="{{mainimage}}" alt="Masthead for {{title}}">
        {% endif %}

        <div class="top-header mx-auto d-block">
            <div class="container-md">
              <h1>{{title}}</h1>
              {% if abstract %}
                <div class="lead">{{abstract}}</div>
              {% endif %}
            </div>
        </div>
        </div>
  </div>
{% endblock %}

{% block contentsOne %}
  <div class="container-md">  {% include "education/nav.njk" %}</div>

  <div id="contentMain" class="container-md">
    <div class="row">
      <div class="col-md-8">
        {{ contents|safe }}
      </div>

      <div class="col-md-4">
        {% block sidebarLeft %}
            {% include "education/education-side.njk" %}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}
