{% extends "base.njk" %}

{% block scripts %}
  {{ super() }}
  <script src="/training.bundle.js"></script>
{% endblock %}

{% block topcontent %}
  <div class="container-fluid full">
    <div class="top-container">
      {% if mainimage %}
        <img class="img-fluid mx-auto d-block d-sm-none d-none" src="{{mainimage}}" alt="Masthead for {{title}}">
      {% endif %}
      {% if smallimage %}
        <img class="img-fluid mx-auto d-block d-md-none d-lg-none" src="{{smallimage}}" alt="Masthead for {{title}}">
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block contentsOne %}
  <div class="container">
    <h1 id="title">{{title}}</h1>
    {% if abstract %}
      <div class="lead">{{abstract}}</div>
    {% endif %}
  </div>
  <div class="container">
    {% include "education/nav.njk" %}
  </div>

  <div id="contentMain" class="container">
    <div class="row">
      <div class="col-md-8">
        {{ contents|safe }}
        <div class="row">
          <div class="col-md-6">
            <h2 id="education-schedule-h2">
              <!-- Year + Course Schedule text inserted here if there are public records (see training.js) -->
            </h2>
          </div>
          <div class="col-md-6">
            <div id="category-filter-dropdown" class="dropdown float-right">
              Filter Courses:	&nbsp;
              <button id="category-filter-dropdown-btn" class="btn btn-default dropdown-toggle" type="button" id="categoryFilterMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <span class="caret"></span>
                <span id="selected-category-filter">All Courses</span>
              </button>
              <ul id="category-dropdown-menu" class="dropdown-menu" aria-labelledby="categoryFilterMenu">
                <li class="category-dropdown-menu-item">All Courses</li>
                <li role="separator" class="divider"></li>
              </ul>
            </div>
          </div>
        </div>
        <div id="insert-here" class="training-list" data-spy="scroll" data-target=".training-header">
          <!-- training records get inserted here from the tnris api (see training.js) -->
        </div>
      </div>
      <div class="col-md-4">
        {% block sidebarLeft %}
          {% include "education/education-side.njk" %}
        {% endblock %}
      </div>
    </div>
  </div>
{% endblock %}
