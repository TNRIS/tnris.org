{% extends "base.njk" %}

{% block topcontent %}
  <div class="container-fluid full">
    <div class="top-container">
      {% if mainimage %}
        <img class="img-fluid img-responsive mx-auto d-block" src="{{mainimage}}" alt="Masthead for {{title}}">
      {% endif %}

      <div class="top-header mx-auto d-block">
        <div class="container-md">
          <h1 class="banner-header">{{title}}</h1>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block contentsOne %}
{% endblock %}

{% block contentsTwo %}
  <div id="events-container" class="container-md">
    <div class="row">
      <div class="col-lg-8">
        {{ contents|safe }}
      </div>
      <div class="col-lg-3">
        <script src="/gio_calendar_next_cm.bundle.js"></script>
        <div id="gio-calendar-next-cm"></div>
      </div>
    </div>
  </div>
{% endblock %}
