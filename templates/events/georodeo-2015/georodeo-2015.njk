{% extends "base.njk" %}
{% import "_form_macros.njk" as form %}


{% block styles %}
  {{ super() }}

  {{form.styles()}}
{% endblock %}

{% block scripts %}
  {{ super() }}

  {{form.scripts()}}
{% endblock %}

{% block topcontent %}
<div class="georodeo-masthead container-fluid full">
    <div class="top-container">
        <div class="sr-only">
            <h1>{{title}}</h1>
            {{abstract}}
        </div>
        <img class="main hidden-xs" src="{{mainimage}}" alt="Masthead for {{title}}">
        <img class="img-responsive hidden-lg hidden-md hidden-sm" src="https://cdn.tnris.org/images/small_georodeo.jpg" alt="A banner for the 2015 GeoRodeo, Cowboy Nerd in front of Chisos Mountains">
    </div>
</div>

<div id="intro" class="georodeo-intro">
    <div class="container">
        <div class="row">
            {% include "events/georodeo-2015/georodeo-intro.njk" %}
        </div>
    </div>
</div>
{% endblock %}

{% block contentsOne %}
<div id="contentMain" class="container">
<div class="row">
    <div class="col-md-4 col-md-push-8">
        {% block sidebarLeft %}
            <div class="georodeo-side">
                {% include "events/georodeo-2015/georodeo-side.njk" %}
            </div>
        {% endblock %}
    </div>
    <div class="col-md-8 col-md-pull-4">
        {{ contents|safe }}
    </div>
</div>
</div>
{% endblock %}

{% block contentsTwo %}
<section class="georodeo-bottom">
    <div class="container">
        <div class="row">
            {% include "events/georodeo-2015/georodeo-map.njk" %}
        </div>
    </div>
</section>
{% endblock %}
