{% extends "base.njk" %}
{% import "_form_macros.njk" as form %}


{% block styles %}
  {{ super() }}

  {{form.styles()}}
{% endblock %}

{% block scripts %}
  {{ super() }}

  {{form.scripts()}}
{% endblock %}

{% block topcontent %}
<div class="georodeo-masthead gr-top-2018 container-fluid full">
    <div class="top-container">
        <div class="sr-only">
            <h1>{{title}}</h1>
            {{abstract}}
        </div>
          <a href="/georodeo">
            <img class="main d-none d-md-block" src="{{mainimage}}" alt="Masthead for {{title}}">
            <img class="main d-block d-md-none" src="{{mainimagesm}}" alt="Masthead for {{title}}">
          </a>

      <div class=" sr-only ">
          <div class="container">
                    May 4, 2018 * Austin, TX
                  </div>
        </div>
    </div>
</div>

<div id="intro" class="georodeo-intro gr-2018">

    <div class="container">

       {% include "events/georodeo-2018/nav.njk" %}
        <div class="row">
            {% include "events/georodeo-2018/georodeo-intro.njk" %}
        </div>
    </div>
</div>
{% endblock %}

{% block contentsOne %}
<div id="contentMain" class="container">
<div class="row">
    <div class="col-md-4 order-md-2">
        {% block sidebarLeft %}
            <div class="georodeo-side d-none d-sm-none">
                {% include "events/georodeo-2018/georodeo-side.njk" %}
            </div>
        {% endblock %}
    </div>
    <div class="col-md-8 order-md-1">
        {{ contents|safe }}
    </div>
</div>
</div>
<section class="georodeo-bottom">
 {% include "events/georodeo-2018/georodeo-map.njk" %}
</section>
{% endblock %}
