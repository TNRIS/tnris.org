
{% extends "base.njk" %}
{% import "_form_macros.njk" as form %}

{% block styles %}
  {{ super() }}

  {{form.styles()}}
{% endblock %}

{% block scripts %}
  {{ super() }}

  {{form.scripts()}}
{% endblock %}

{% block topcontent %}
  <div class="full forum-2018-top">
    <div class="forum-2017-brand-container container-md">
      {% include "events/texas-gis-forum/2018/nav.njk" %}
    </div>
      {% if mainimage %}
        <img src="{{mainimage}}" class="banner img-fluid mx-auto d-none d-md-block" alt="Texas GIS Forum Main Image">
      {% endif %}
      {% if mainimagesm %}
        <img src="{{mainimagesm}}" class="banner img-fluid mx-auto d-md-none d-lg-none" alt="Texas GIS Forum Main Image">
      {% endif %}
  </div>
{% endblock %}

{% block contentsOne %}
  <div class="container row mx-auto">
      {{contents|safe}}
  </div>
{% endblock %}

{% block contentsTwo %}
  <section class="grey-bg">
      <div class="container-md"></div>
  </section>
  <section>
      <div class="container-md">
        {% include "events/texas-gis-forum/2018/map.njk" %}
      </div>
  </section>
  <section class="forum-sponsors">
    {% include "events/texas-gis-forum/2018/sponsors.njk" %}
  </section>
{% endblock %}
