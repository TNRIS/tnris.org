

{% set highlight_items = [
  {
    name: '',
    acronym: ' ',
    description: 'The GIS Forum is the premiere event in Texas offering the network and power of nationally recognized experts in the geospatial field.',
    image: 'https://cdn.tnris.org/images/2023-forum-sponsor-cta.jpg',
    alt_text: 'Texas GIS Forum',
    link: '/texas-gis-forum/2023',
    button_text: 'Learn More <span class="sr-only">about the Texas GIS Forum</span>'
  }, {
    name: '',
    acronym: '',
    description: 'We are excited to announce the 88th Texas Legislature passed a bill to officially rename the Texas Natural Resources Information System (TNRIS) to the Texas Geographic Information Office (TxGIO).',
    image: 'https://cdn.tnris.org/images/txgio-new.jpg',
    alt_text: 'Texas flag superimposed with spatial data',
    link: '/about',
    button_text: 'Learn More <span class="sr-only">about the Texas Geographic Information Office</span>'
  }, {
    name: 'Research &amp; Distribution',
    acronym: 'RDC',
    description: 'Let our hands-on team of data Specialists assist you with physical map products and other datasets, many unavailable online.',
    image: 'https://cdn.tnris.org/images/open_folders_slim.jpg',
    alt_text: 'Data support staff working with a customer',
    link: '/research-distribution-center',
    button_text: 'Learn More <span class="sr-only">about Research &amp; Distribution</span>'
  }
] %}

<div id="highlights">
  <div class="container-md">
    <h1 class="text-center">TNRIS is now TxGIO!</h2>
    <h2 class="text-center">Providing the Highest Level of Geographic Data Services to the People of Texas</h2>
    <div class="row">
      {% for item in highlight_items %}
        <div class="col-lg-4">
          <div class="highlightBox">
            <div class="image-container">
              <h2>
                {% if item.acronym %}
                  <strong>{{item.acronym}}</strong><br>
                {% endif %}
                {{item.name|safe}}
              </h2>
              <a href="{{item.link}}"><img class="img-fluid" src="{{item.image}}" alt="{{item.alt_text}}"></a>
            </div>
            <p>{{item.description}}</p>
            <a class="btn btn-secondary" href="{{item.link}}" role="button">{{item.button_text|safe}} <span class="fa fa-chevron-right"></a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
